<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpotifyMusic" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">?attr/colorOnPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.SpotifyMusic" parent="Base.Theme.SpotifyMusic" />
    <style name="Theme.StartScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/animate_ic_splash</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.SpotifyMusic</item>
    </style>
    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/plus_jakarta_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>